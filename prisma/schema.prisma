generator client {
  provider = "prisma-client-js"
  output   = "@prisma/client"
  clientEngineType = "binary"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User{
  id String @id @default(uuid())
  name String
  email String
  isAdmin Boolean
  blogs Blog[]
}

model Blog{
   id String @id @default(uuid())
  createAt DateTime
  title String
  content String
  image Bytes
  author User  @relation(fields: [authorId], references: [id])
  authorId String

}